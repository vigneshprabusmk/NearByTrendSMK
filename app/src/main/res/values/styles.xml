    </style>

     Base application theme.
    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/twitterBlue</item>
        <item name="colorPrimaryDark">@color/twitterBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewTweet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="textViewBottom" parent="textViewTweet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13dp</item>

        <item name="android:layout_weight">1</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>


</resources>
